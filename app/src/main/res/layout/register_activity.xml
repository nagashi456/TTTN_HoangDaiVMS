<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_hoangdai"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Tab chuyển giữa đăng nhập / đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_white"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tabLogin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đăng nhập"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tabRegister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Đăng ký"
                android:textColor="#1E63E9"
                android:background="@drawable/bg_tab_active"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- ===== Form Đăng ký ===== -->

        <!-- Họ và tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Giới tính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtGender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- CCCD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Căn cước công dân (CCCD)"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtCCCD"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:inputType="number"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Ngày sinh -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtBirthday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="8dp"
                android:paddingHorizontal="12dp"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Số điện thoại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:inputType="phone"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Xác nhận mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext_white"
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

        <!-- Nút yêu cầu -->
        <Button
            android:id="@+id/btnRequest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Gửi yêu cầu"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_blue_1"
            app:backgroundTint="@null"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
