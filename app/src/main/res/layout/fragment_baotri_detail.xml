<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baotriDetailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FB">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentInsetStart="8dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_marginStart="4dp"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Báo trì"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable content: constrained between toolbar and FAB -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnExport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Báo trì #BT-001 — 60C-45678"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#222"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Card with maintenance details -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- MaBaoTri -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Mã bảo trì:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvMaBaoTri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="BT-001"
                            android:textColor="#222"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- MaXe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="MaXe:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvMaXe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="1"
                            android:textColor="#222"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- BienSo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Biển số:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvBienSo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="60C-45678"
                            android:textColor="#222"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- Ngay gan nhat bao tri -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Ngày bảo trì:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvNgayBaoTri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="2025-05-01"
                            android:textColor="#222"
                            android:textSize="14sp"/>
                    </LinearLayout>


                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- Noi dung -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nội dung:"
                            android:layout_weight="0.45"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvNoiDung"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Thay dầu, kiểm tra phanh"
                            android:textColor="#222"
                            android:layout_weight="0.55"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- Don vi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Đơn vị thực hiện:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvDonVi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="Xưởng A"
                            android:textColor="#222"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>


                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- Tình trạng trễ / Next due -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Trạng thái:"
                            android:textColor="#777"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/tvTrangThaiBaoTri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="Trễ 10 ngày"
                            android:textColor="#D32F2F"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <!-- Thông tin chủ xe (nếu cần) -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin chủ xe"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="#222"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="Họ tên:"
                            android:textColor="#777"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvChuXeHoTen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="Nguyễn Văn A"
                            android:textColor="#222"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:text="SĐT:"
                            android:textColor="#777"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvChuXeSDT"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:text="0912345678"
                            android:textColor="#222"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/btnExport"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="Xuất"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#1476FF"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
