<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF6FF">

    <!-- Header (màu xanh, bo đáy) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="28dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_header_round_bottom">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back_white"
            android:contentDescription="close"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tài xế"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <!-- right spacer (dùng để canh giữa tiêu đề) -->
        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <!-- Card content overlapping header -->
    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:clipToPadding="false"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="28dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- White card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="28dp"
                    android:paddingBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <!-- Name + edit icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngô Văn Tuấn"
                            android:textSize="20sp"
                            android:textColor="#0B1A2B"
                            android:layout_centerHorizontal="true"/>

                        <ImageView
                            android:id="@+id/btnEdit"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_edit"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="edit"/>
                    </RelativeLayout>

                    <!-- Action icons: Call / Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="18dp">

                        <!-- Call -->
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="20dp">

                            <ImageView
                                android:id="@+id/ivCall"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bg_circle"
                                android:padding="14dp"
                                android:src="@drawable/ic_call"
                                android:contentDescription="call" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call"
                                android:textSize="12sp"
                                android:textColor="#1E63E9"
                                android:layout_marginTop="6dp"/>
                        </LinearLayout>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivEmail"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bg_circle"
                                android:padding="14dp"
                                android:src="@drawable/ic_email"
                                android:contentDescription="email" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="12sp"
                                android:textColor="#1E63E9"
                                android:layout_marginTop="6dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Section: Thông tin chung -->
                    <TextView
                        android:id="@+id/label_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin chung"
                        android:textColor="#0B1A2B"
                        android:layout_marginTop="22dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Tile template -->
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_call"
                                    android:contentDescription="icon phone"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SDT"
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="09311234529"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_id"
                                    android:contentDescription="icon id"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="CCCD"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvCccd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="123456789012"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_birthday"
                                    android:contentDescription="icon birth"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày sinh"
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvBirth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="16/9/2004"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_gender"
                                    android:contentDescription="icon gender"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Giới tính"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvGender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nam"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_email"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"

                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="abc@gmail.com"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="160dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_active"
                                    android:layout_gravity="center_horizontal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Trạng thái"

                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvActive"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Đã duyệt"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Section: Thông tin sức khỏe -->
                    <TextView
                        android:id="@+id/label_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin sức khỏe"
                        android:textColor="#0B1A2B"
                        
                        android:layout_marginTop="18dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_weight"
                                    android:contentDescription="icon weight"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Cân nặng"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvWeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="72 kg"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_height"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Chiều cao"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvHeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1m72"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_health_notes"
                                    android:contentDescription="icon health"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bệnh nền"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvHealthNotes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Chi tiết"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_birthday"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày khám gần nhất"
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvLastCheckup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1/2/2025"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_drug_test"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ma Túy"
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvDrugTest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Âm tính"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_result"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kết luận"
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvHealthConclusion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Đạt"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Section: Bằng cấp -->
                    <TextView
                        android:id="@+id/label_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin bằng cấp"
                        android:textColor="#0B1A2B"
                        
                        android:layout_marginTop="18dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_certificate"
                                    android:contentDescription="icon cert"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Loại bằng"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvLicenseType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="FC"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_birthday"
                                    android:contentDescription="icon date"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày cấp"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvIssueDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="12/3/2024"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_birthday"
                                    android:contentDescription="icon expiry"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày hết hạn"
                                    
                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvExpiryDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="3/4/2025"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="136dp"
                                android:layout_height="140dp"
                                android:orientation="vertical"
                                android:background="@drawable/bg_tile_light"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_address"
                                    android:layout_gravity="center_horizontal"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nơi cấp"

                                    android:textColor="#1E63E9"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"/>

                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Đà Nẵng"
                                    android:gravity="center"
                                    android:textColor="#6B7A89"
                                    android:layout_marginTop="6dp"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
