<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    card:cardCornerRadius="12dp"
    card:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="12dp">

        <!-- Checkbox chọn -->
        <CheckBox
            android:id="@+id/checkSelect"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:buttonTint="#1476FF"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Biển số + (nếu trễ) -> "60C-45678 - Trễ 10 ngày" -->
        <TextView
            android:id="@+id/tvPlateWithStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkSelect"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:text="60C-45678"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
