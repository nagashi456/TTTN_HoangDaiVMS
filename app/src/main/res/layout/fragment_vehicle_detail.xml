<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FB">

    <!-- COVER (ảnh nền) -->
    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_vehicle_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Close icon (upper-left) -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:tint="#0B1A2B"
        app:layout_constraintTop_toTopOf="@id/ivCover"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>

    <!-- WHITE CARD overlapping cover -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="170dp">

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TOP ROW (giữ nguyên) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Column 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Tài Xế"
                    android:textSize="12sp"
                    android:textColor="#6B7A89"/>

                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trần Đình Nam"
                    android:textColor="#0B1A2B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Column 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng Thái"
                    android:textSize="12sp"
                    android:textColor="#6B7A89"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang Sử Dụng"
                    android:textColor="#0B1A2B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Column 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Kiểm Tra"
                    android:textSize="12sp"
                    android:textColor="#6B7A89"/>

                <TextView
                    android:id="@+id/tvInspectionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/8/2025"
                    android:textColor="#0B1A2B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- NEW SECTION: Thông tin xe (Xe) -->
        <TextView
            android:id="@+id/label_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin xe"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0B1A2B"
            android:layout_marginTop="12dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Biển số (Xe.BienSo) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_plate"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biển số"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvBienSo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="huyndai"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Loại xe (Xe.LoaiXe) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_truck1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loại xe"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvLoaiXe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xe tải"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Hãng sản xuất (Xe.HangSX) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_truck1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hãng SX"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvHangSX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HINO"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Màu sắc (Xe.MauSac) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_color"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Màu sắc"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvMauSac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trắng"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Số hiệu (Xe.SoHieu) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_number"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số hiệu"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvSoHieu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số hiệu"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <!-- NEW SECTION: Thông tin bảo hiểm (BaoHiem) -->
        <TextView
            android:id="@+id/label_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin bảo hiểm"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0B1A2B"
            android:layout_marginTop="12dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Số hợp đồng (BaoHiem.SoHD) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_contract"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số HĐ"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvSoHD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HD-001234"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Ngày bắt đầu (BaoHiem.NgayBatDau) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_birthday"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày bắt đầu"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvNgayBatDau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01/01/2025"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Ngày kết thúc (BaoHiem.NgayKetThuc) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_birthday"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày kết thúc"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvNgayKetThuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="31/12/2025"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Công ty (BaoHiem.CongTy) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_truck1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Công ty BH"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvCongTy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABC Insurance"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <!-- UPDATED SECTION: Thông tin bảo trì (BaoTri) -->
        <TextView
            android:id="@+id/label_maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin bảo trì"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0B1A2B"
            android:layout_marginTop="12dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Ngày gần nhất (BaoTri.NgayGanNhat) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_birthday"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày gần nhất"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvNgayGanNhatBT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20/08/2025"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Nội dung (BaoTri.NoiDung)   -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_contract"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nội dung"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvNoiDungBT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thay dầu, kiểm tra phanh"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Đơn vị (BaoTri.DonVi) -->
                <LinearLayout
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_tile_light"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_truck1"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đơn vị"
                        android:textColor="#1E63E9"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tvDonViBT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xưởng A"
                        android:gravity="center"
                        android:textColor="#6B7A89"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
</ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
